      <div class="col-lg-4 col-md-4 jumbotron" id="form">

        <div id="photo"><img id="profile" src="#" alt="" class="img-responsive photo"></div>

        <!-- Form Starts -->

        <form id="signup" enctype="multipart/form-data" action="/register" method="POST">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="dpimage">Upload</span>
            </div>
            <div class="custom-file">
              <input type="file" class="custom-file-input" name="profilepic" id="dpimageinput" accept="image/*"
                aria-describedby="dpimage" onchange="readURL(this);">
              <label class="custom-file-label" for="dpimageinput">Profile Pic</label>
            </div>
          </div>
          <div class="form-group">
            <label for="name">Name<span style="color:red">&nbsp;*</span></label>
            <input type="text" id="name" class="form-control" required placeholder="Name" name="name" pattern="[A-Za-z\s]{4,32}"
              title="=Alphabets and Spaces">
          </div>
          <div class="form-group">
            <label class="color" for="email">Email<span style="color:red">&nbsp;*</span></label>
            <input type="email" id="email" class="form-control" placeholder="Email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"
              maxlength="30" required>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label class="color" for="mobile">Mobile No.<span style="color:red">&nbsp;*</span></label>
                <input type="number" id="mobile" class="form-control" placeholder="Enter Mobile No." name="mobile" min="1111111111"
                  max="9999999999">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="">Gender<span style="color:red">&nbsp;*</span></label>
                <select class="form-control" name="gender">
                  <option>Male</option>
                  <option>Female</option>
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label for="password">Password<span style="color:red">&nbsp;*</span></label>
                <input type="password" id="password" class="form-control" name="password" required placeholder="Enter password"
                  pattern=".{8,}" title="Atleast 8 characters" maxlength="20">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="rpassword">Confirm Password<span style="color:red">&nbsp;*</span></label>
                <input type="password" id="rpassword" class="form-control" name="rpassword" required placeholder="Confirm password"
                  pattern=".{8,}" title="Atleast 8 characters" maxlength="20">
              </div>
            </div>
          </div>


          <div class="form-group date">
            <label for="dob">Enter Date of birth<span style="color:red">&nbsp;*</span></label>
            <input type="text" id="dob" class="form-control text-center" name="dob" data-large-default="true"
              data-large-mode="true" data-lock="to" data-format="Y-m-d" data-translate-mode="true" 
              data-theme="my-style" />
          </div>

          <div class="form-group text-center"><button type="submit" class="btn btn-primary btn-block"><i class="fa fa-paper-plane">&nbsp;
                Sign up</i></button></div>

          <div class="row">
            <div class="col-xl-6">
              <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-success btn-block mb-3"><i
